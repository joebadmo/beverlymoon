{% macro render_main_menu() -%}
<ul class="clearfix menu-container">
{% for menu_item in menu -%}
<li><a class="nav-item" {% if menu_item.url+".html" == resource.url %}class="selected"{% endif %}
href="/{{ menu_item.url }}">{{ menu_item.title }}</a></li>
{%- endfor %}
</ul>
{%- endmacro %}

